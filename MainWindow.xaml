            Width="Auto"
            Height="Auto"
            Padding="5"
            FontSize="14"
            FontWeight="Bold" />

        <Label
            Name="lOperation"
            Grid.Row="1"
            Grid.Column="6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
